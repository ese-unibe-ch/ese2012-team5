%link(rel="stylesheet" type="text/css" href="/style.css")

%h1 Create Item
%br

=haml :'message_template', :locals => { :info => info }

%form( action="/createItem" method="POST" enctype="multipart/form-data")
  %table#table_new
    %tr
      %td
        %label Name
      %td
        %input(type="text" name="name" )
    %tr
      %td
        %label Price
      %td
        %input(type="text" name="price")
    %tr
      %td
        %label Quantity
      %td
        %input(type="text" name="quantity")
    %tr
      %td
        %label Description
      %td
        %textarea(cols="50" rows="4" name="description")
    %tr
      %td
        %label Picture
      %td
        %input(type='file' name="file_upload" accept="image/*")
    %tr
      %td{:colspan => 2}
        %input(type="submit" value="Create")

%input(id="page-identifier" type="hidden" value="add_item")
