%link(rel="stylesheet" type="text/css" href="/style.css")

%h1 Welcome #{current_user.name}

%br

-#List of users Items
Own Items
%table#table_new
  %thead
    %th Picture
    %th Name
    %th Quantity
    %th Value
    %th Active
  %tbody
    - for item in user_items
      %tr
        %td
          %img{:height => "70", :width => "70", :src => "/item_image_upload/#{item.pictures[0]}"}
        %td
          %a{:href => "/item/#{item.id}"} #{item.name}
        %td
          #{item.quantity}
        %td
          #{item.price}
        %td
          - if item.active
            %p yes
          - else
            %p no
%br


-#List of all Items, for each user a new Table
List of Items by other users
%table#table_new
  %thead
    %tr
      %th Picture
      %th Name
      %th Quantity
      %th Value
      %th Owner
      %th Buy
  %tbody
    -for item in items
      -if item[0].owner != current_user
        %tr
          %td
            %img{:height => "70", :width => "70", :src => "/item_image_upload/#{item[0].pictures[0]}"}
          %td
            %a{:href => "/item/#{item[0].id}"}#{item[0].name}
          %td
            -i = 0
            -for x in item
              -i = i + x.quantity
            #{i}
          %td
            ab
            #{item[0].price}
          %td
            %a{:href => "/user/#{item[0].owner.name}"}
              -if item.size >1
                #{item.size} owners
              -else
                #{item[0].owner.name}
          %td
            -if item[0].price <= current_user.credits and item[0].active
              Amount (#{item[0].quantity} available):


              %form( action="/item/#{item.id}/buy" method="POST" )
                %input(type="text" name="quantity" value=1 size=1)
                %input(type="submit" value="Buy")
            -else
              %form( action="/item/#{item.id}/buy" method="POST" )
                %input(type="submit" disabled="disabled" value="Buy")