%link(rel="stylesheet" type="text/css" href="/design.css")

-#Header
%h1 Welcome #{current_user}


%a{:href => "/user/#{current_user}"} Profile
%p
%a{:href => "/logout"} Logout
%p


-#List of all Items, for each user a new Table

%p
%table{:border => 1}
  %tbody
    %tr
      %th Item
      %th Value
      %th Active
      %th Owner
  - for user in users
    - if user.name != current_user
      - for item in user.items
        %tr
          %td
            %a{:href => "/item/#{item.id}"}#{item.name}
          %td #{item.price}
          %td
            - if item.active
              %p yes
            - else
              %p no
          %td
            %a{:href => "/user/#{user.name}"} #{user.name}