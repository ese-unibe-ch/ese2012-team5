%link(rel="stylesheet" type="text/css" href="/design.css")

-#Header
%h1 Profile of #{user.name}


%a{:href => "/"} back
%p
%img(src="../images/#{user.picture}")
%p
%p

-#List of users Items
%table{:border => 1}
  %tbody
    %tr
      %th Item
      %th Value
      %th Active
  - for item in user.items
    %tr
      %td
        %a{:href => "/item/#{item.id}"} #{item.name}
      %td #{item.price}
      %td
        - if item.active
          %p yes
        - else
          %p no