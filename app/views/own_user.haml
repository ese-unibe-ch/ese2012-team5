%link(rel="stylesheet" type="text/css" href="/style.css")

-#Header
%h1 #{user.name}


%a{:href => "/"} back
%p
%a{:href => "/settings"} Edit Profile
%p
%img(src="../images/#{user.picture}")
%p
%p

-#List of users Items
%table{:border => 1}
  %tbody
    %tr
      %th Item
      %th Value
      %th Active
  - for item in user.items
    %tr
      %td
        %a{:href => "/item/#{item.id}"} #{item.name} #{item.name}
      %td #{item.price}
      %td
        - if item.active
          %p yes
        - else
          %p no