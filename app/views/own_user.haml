%link(rel="stylesheet" type="text/css" href="/design.css")

-#Header
%h1 #{current_name}

-#Links
%a{:href => "/logout"} Logout
%a{:href => "/settings"} Edit Profile

-#Profile Picture
%img{:alt => "Profile Picture", :src => "public/images/#{user.picture}"}

-#List of users Items
%table{:border => 1}
  %tbody
    %tr
      %th Item
      %th Value
      %th Active
  - for item in user.items
    %tr
      %td #{item.name}
      %td #{item.price}
      %td
        - if item.active
          %p yes
        - else
          %p no
%p