%link(rel="stylesheet" type="text/css" href="/style.css")

-#Header
%h1 Welcome Guest

-#List of all Items, for each user a new Table
%p
%table#table_new
  %thead
    %th Picture
    %th Item
    %th Value
    %th Active
    %th Owner

  %tbody
    - for user in users
      - for item in user.items
        %tr
          %td
            Pic
          %td
            %a{:href => "/item/#{item.id}"} #{item.name}
          %td
            #{item.price}
          %td
            - if item.active
              %p yes
            - else
              %p no
          %td
            %a{:href => "/user/#{user.name}"} #{user.name}