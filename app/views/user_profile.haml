-#List of users Items
%table#table_new
  %thead
    %th Picture
    %th Item
    %th Quantity
    %th Value
    %th Active
    %th Buy

  %tbody
    - for item in user.items
      %tr
        %td
          Pic
        %td
          %a{:href => "/item/#{item.id}"} #{item.name}
        %td
          #{item.quantity}
        %td
          #{item.price}
        %td
          - if item.active
            %p yes
          - else
            %p no
        %td
          Buy


